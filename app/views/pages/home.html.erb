<!--<div class="row header-focus">-->
    <div class="row intro-lead-in"></div>
        <div class="container">
            <div class="col-lg-5 header-toggle">
                <div class="row">
                    <label class="header-label"><%= t("Car_Renters") %></label>
                </div>
                <div class="row renter-msgs-carousel-row">
                    <div class="col-lg-12">
                        <div id="myCarousel" class="carousel" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner carousel-img" role="listbox">
                                <div class="item active carousel-item">
                                    <label class="seller-message"><%= t("renter_msg1") %>!</label>
                                </div>
                                <div class="item carousel-item">
                                    <label class="seller-message"><%= t("renter_msg2") %>.</label>
                                </div>
                                
                                <div class="item carousel-item">
                                    <label class="seller-message"><%= t("renter_msg3") %>.</label>
                                </div>
                            </div>
                        </div>
                    </div><!--/col-lg-6 col-lg-offset-3-->
                </div> <!--/row renter-msgs-carousel-row-->
                <div class="row cars-carousel-row">
                    <div class="col-lg-6 col-lg-offset-3">
                        <div id="myCarousel" class="carousel" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner carousel-car-img" role="listbox">
                                <% @cars.each_with_index do |car, index| %>
                                    <div class="item <%= 'active' if index == 0 %> carousel-item">
                                        <a href='/cars/<%= car.id %>' class="<%= 'login-link' unless current_user %>" data-redirect="show-featured-car" data-carid="<%= car.id %>">
                                            <div class="pt-package-3-sm">
                                                <div class="pt-header-sm" style="background-color:'+thirdPackageColor+';">
                                                    <h3>
                                                        <span class="pt-amount-sm">$<%= car.price %></span>
                                                        <span class="pt-terms-sm">/<%= t("day") %></span>
                                                    </h3>
                                                </div>       
                                            </div><!--/pt-package-3-->
                                            <img class="<%= 'login-link' unless current_user %>" src="<%= car.avatars[0].url %>" data-redirect="show-featured-car">
                                        </a>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div><!--/col-lg-6 col-lg-offset-3-->
                </div> <!--/row cars-carousel-row-->
                <div class="row">
                    <% unless (user_signed_in?) %>
                        <%= link_to t("rent_now"), "#", class: "login-link btn btn-success call-to-action", data: { redirect: "rent-now" } %>
                    <% else %>
                        <%= link_to t("rent_now"), car_search_path, class: "btn btn-success call-to-action" %>
                    <% end %>
                </div>
            </div>
            <div class="col-lg-5 col-lg-offset-2 header-toggle">
                <div>
                    <label class="header-label"><%= t("Car_Owners") %></label>
                </div>
                <div class="row renter-msgs-carousel-row">
                    <div class="col-lg-12">
                        <div id="myCarousel" class="carousel" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner carousel-img" role="listbox">
                                <div class="item active carousel-item">
                                    <label class="seller-message"><%= t("owner_msg1") %>!</label>
                                </div>
                                <div class="item carousel-item">
                                    <label class="seller-message"><%= t("owner_msg2") %>.</label>
                                </div>
                                <div class="item carousel-item">
                                    <label class="seller-message"><%= t("owner_msg3") %>!</label>
                                </div>
                            </div>
                        </div>
                    </div><!--/col-lg-6 col-lg-offset-3-->
                </div> <!--/row renter-msgs-carousel-row-->
                <div class="row cars-carousel-row">
                    <div class="col-lg-6 col-lg-offset-3">
                        <div id="myCarousel" class="carousel" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner carousel-img" role="listbox">
                                <div class="item active carousel-item">
                                    <img src="/assets/Money-300x200.jpg" alt="Chania">
                                </div>
                            </div>
                        </div>
                    </div><!--/col-lg-6 col-lg-offset-3-->
                </div> <!--/row cars-carousel-row-->
                <div class="row">
                    <% unless (user_signed_in?) %>
                        <%= link_to t("list_your_car"), "#", class: "login-link btn btn-success call-to-action", data: { redirect: "list-your-car" } %> 
                    <% else %>
                        <%= link_to t("list_your_car"), new_car_path, class: "btn btn-success call-to-action" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div><!--/container-->
<!--</div><!-/row header-focus--> 